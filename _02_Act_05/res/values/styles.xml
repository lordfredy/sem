<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light"></style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme"></style>

    <style name="bg_titulo_docentes">
        <item name="android:gravity">center</item>
        <item name="android:textColor">#0F0F0F</item>
        <item name="android:background">@drawable/fondo_docentes</item>
    </style>

    <style name="bg_titulo_estudiantes">
        <item name="android:gravity">center</item>
        <item name="android:textColor">#000000</item>
        <item name="android:background">@drawable/fondo_estudiantes</item>
    </style>

    <!-- Tomado de la guia -->
    <style name="layoutFW">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="layoutFW.centerVertical">
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="layoutMW">
        <item name="android:padding">4dip</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="layoutFF">
        <item name="android:padding">4dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="itemTableText">
        <item name="android:textStyle">normal</item>
        <item name="android:background">@drawable/boton</item>
    </style>

    <style name="itemTable">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>